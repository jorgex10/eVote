<div id="forgot-password" class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      Forgot your password?
    </h2>
    <% messages = resource.errors.full_messages.map { |msg| content_tag(:li, msg) }.join %>
    <% unless messages.blank? %>
      <div class="ui red message" role="alert"><%= messages.html_safe %></div>
    <% end %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class:"ui large form", method: :post }) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder:"E-mail address" %>
          </div>
        </div>
      </div>
      <%= f.submit "Send me reset password instructions", class:"ui fluid large teal submit button" %>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
