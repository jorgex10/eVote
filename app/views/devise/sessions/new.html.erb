<div id="login-form" class="ui middle aligned center aligned grid login-styles">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        Bienvenidos a eVote
      </div>
    </h2>
    <br>
    <% unless notice.blank? %>
      <div class="ui teal message" role="alert"><%= notice %></div>
    <% end %>
    <% unless alert.blank? %>
      <div class="ui red message" role="alert"><%= alert %></div>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:"ui large form" }) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder:"E-mail address" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          </div>
        </div>
      </div>
      <%= f.submit "Log in", class:"ui fluid large teal submit button" %>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
